<div class="row">
  <div class="well col-md-8 col-md-offset-2" >
    <%= form_for @chef  do |f| %>
        <%= f.label :chefname %>
        <%= f.text_field :chefname %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password, rows: 10 %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit(@chef.new_record? ? "Create Chef Profile" : "Edit Chef Profile", class:"btn btn-success") %>
    <% end %>
  </div>


