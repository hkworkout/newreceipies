<div class="row">
  <div class="well col-md-8 col-md-offset-2" >
  <%= form_for(@recipe, html: { multipart: true}) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :summary %>
  <%= f.text_field :summary %>

  <%= f.label :description %>
  <%= f.text_area :description, rows: 10 %>
  
  <span class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg,image/jpg,image/gif,image/png' %>
  </span>

  <%= f.submit(@recipe.new_record? ? "Create Recipe" : "Edit Recipe", class:"btn btn-success") %>
  <% end %>
</div>

<script type="text/javascript">
//binds to onchange event of your input field
$('#recipe_picture').bind('change', function() {

  //this.files[0].size gets the size of your file.
  file_size_in_megabytes = this.files[0].size/1024/1024;
  if (file_size_in_megabytes > 5){
    alert('Maximum file size is 5MB. Please choose a smaller file');
  }

});
</script>

