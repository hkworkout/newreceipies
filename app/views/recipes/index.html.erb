<%= render 'shared/page_title', title: "All Recipes" %>


  <% @recipes.each do |recipe| %>
    <div class="row">
  
      <div class="col-sm-2 col-md-2">
        <section class="chef_info center">
          <%= gravatar_for recipe.chef, size: 80%>
          <h5>Chef name: <%= recipe.chef.chefname%></h5>
        </section>
      </div>

      <div class="col-sm-6 col-md-6 well">
        <h4> <%= link_to recipe.name, recipe_path(recipe) %></h4>
        <p><%= recipe.summary %> </p>
        <p>
          <span class='quiet'> <%= time_ago_in_words(recipe.created_at) %> ago </small>
          </span>
        </p>
      </div class="col-sm-4">
        <%= image_tag(recipe.picture.url, size: "250x150", class: "gravatar") if recipe.picture? %>
      <div>

      </div>
    </div>
  <hr/>
<% end %>
    



